@model AspNetUsers

@{ 

<form method="post" asp-controller="ToDoCapstone" asp-action="AddToDo">
    <label for="Details">Details</label>
    <input type="text" name="Details" required/>
    <br/>

    <label for="DueDate">Due Date</label>
    <input type="date" name="DueDate"/>
    <br/>

    <input type="submit"/>
</form>

    if(Model.ToDos.Count != 0)
    {
        foreach(ToDos t in Model.ToDos)
        {
               <p>_____________________________________________</p>
               <h4>@t.Details</h4>
               <p>Is complete? @t.Completed</p>
               @if (t.DueDate.ToString() == DateTime.MaxValue.ToString())
                {
                    <p>Due date: N/A</p>
                }
                else
                {
                    <p>Due date: @t.DueDate</p>
                }
               <a asp-action="UpdateCompletion" asp-route-id="@t.Id">Update Completion</a> 
               <br/>
               <a asp-action="DeleteItem" asp-route-id="@t.Id">Delete</a>
                <br/>
        }
    }
    else
    {
        <h3>No To-Dos have been added</h3>
    }
}
