@model ToDos

<p>Are you sure you want to delete the following task?</p>
<p>@Model.Details</p>

<form method="post" asp-controller="ToDoCapstone" asp-action="DeleteItem">
    <label for="yes">Yes</label>
    <input type="radio" id="yes" name="option" value="yes" />

    <label for="no">No</label>
    <input type="radio" id="no" name="option" value="no" /> 
    <input type="submit" />
</form>
